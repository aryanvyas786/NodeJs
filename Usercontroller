// Update an existing user
export const updateUser = async (req: Request, res: Response) => {
  const { id } = req.params;
  const {
    firstName,
    lastName,
    email,
    companyAddress,
    companyCity,
    companyState,
    companyZip,
    homeAddress,
    homeCity,
    homeState,
    homeZip,
  } = req.body;

  try {
    const user = await User.findByPk(id);
    if (!user) {
      return res.status(404).json({ message: 'User not found' });
    }

    await user.update({
      firstName,
      lastName,
      email,
    });

    const address = await Address.findOne({ where: { userId: user.id } });
    if (address) {
      await address.update({
        companyAddress,
        companyCity,
        companyState,
        companyZip,
        homeAddress,
        homeCity,
        homeState,
        homeZip,
      });
    }

    if (req.file) {
      user.profilePhoto = req.file.filename;
    }

    if (req.files && req.files.appointmentLetter) {
      user.appointmentLetter = req.files.appointmentLetter[0].filename;
    }

    await user.save();

    res.status(200).json({ user });
  } catch (error) {
    res.status(500).json({ error: 'Failed to update user' });
  }
};
