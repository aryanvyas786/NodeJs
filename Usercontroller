import { Router } from 'express';
import { addUser, getUsers, getUserById, updateUser, deleteUser } from '../controllers/userController';
import upload from '../middleware/upload';

const router = Router();

// Add a new user
router.post('/users', upload.fields([{ name: 'profilePhoto' }, { name: 'appointmentLetter' }]), addUser);

// Get all users
router.get('/users', getUsers);

// Get a single user by ID
router.get('/users/:id', getUserById);

// Update a user by ID
router.put('/users/:id', upload.fields([{ name: 'profilePhoto' }, { name: 'appointmentLetter' }]), updateUser);

// Delete a user by ID
router.delete('/users/:id', deleteUser);

export default router;
